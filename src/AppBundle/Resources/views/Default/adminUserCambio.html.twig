{% extends 'AppBundle::layoutForm.html.twig' %}

    {% block title %}
        easy-commerce usuario
    {% endblock %}

    {% block panel %}
        <div class="panel panel-info">
    {% endblock %}

    {% block titulo %}
        Formulario Perfil Usuario
    {% endblock %}

    {% block nav %}
        {% include 'AppBundle:Comunes:navAdmin.html.twig' %}
    {% endblock %}

    {% block formulario %}

            <form id="registerForm"  action="" method="post" {{ form_enctype(form) }}>

                <div class="input-group">
                    <span class="input-group-addon">

                    </span>
                    {{ form_row(form.nombre) }}
                </div>

                <div class="input-group">
                    <span class="input-group-addon">

                    </span>
                    {{ form_row(form.apellido1) }}
                </div>

                <div class="input-group">
                    <span class="input-group-addon">

                    </span>
                    {{ form_row(form.apellido2) }}
                </div>

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-envelope"></i>
                    </span>
                    {{ form_row(form.email) }}
                </div>

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    {{ form_row(form.username) }}
                </div>

                <div class="hide">
                    {{ form_row(form.password.first) }}
                    {{ form_row(form.password.second) }}
                </div>

                <div class="hide">
                    <label for="checkbox_id">{{ form_row(form.terms) }}</label>
                </div>

                <hr class="colorgraph">

                <div class="input-group">
                    <a href="{{ path('appBundle_admin_user_pass',{"username":app.user.username,"id":app.user.id}) }}">Cambiar contrase√±a</a>
                </div>

                <hr class="colorgraph">

                <div class="row">
                    <div class="col-xs-12">
                        <input type='submit' class='btn btn-lg btn-success btn-block ' name='_registrar' value='Registrarme'>
                    </div>
                </div>

                {{ form_rest(form) }}
            </form>

{% endblock %}